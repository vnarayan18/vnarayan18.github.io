  <script>
    // Simple niceties
    document.getElementById('year').textContent = new Date().getFullYear();
    // Show a friendly "Updated" label using the page's last-modified time
    const lm = new Date(document.lastModified);
    const pretty = lm.toLocaleDateString(undefined,{year:'numeric',month:'short',day:'numeric'});
    document.getElementById('updated-date').textContent = pretty;

    // Quick keyboard nav: press '/' to open section links
    window.addEventListener('keydown', (e)=>{
      if(e.key === '/'){
        e.preventDefault();
        const msg = 'Jump to: project, details, about, contact';
        const to = prompt(msg, 'project');
        if(to){
          const id = to.trim().toLowerCase();
          const el = document.getElementById(id);
          if(el) el.scrollIntoView({behavior:'smooth'});
        }
      }
    });
  </script>
